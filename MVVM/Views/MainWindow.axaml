<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:MVVM.ViewModels"
        x:Class="MVVM.Views.MainWindow"
        mc:Ignorable="d"
        Title="Delivery App"
        Width="700"
        Height="400"
        x:DataType="viewModels:MainWindowViewModel">
        <Grid Margin="10">
                <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid ItemsSource="{Binding FilteredOrders}" SelectedItem="{Binding SelectedOrder}" AutoGenerateColumns="False" Grid.Row="0">
                        <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                                <DataGridTextColumn Header="Клиент" Binding="{Binding ClientName}"/>
                                <DataGridTextColumn Header="Адрес" Binding="{Binding Address}"/>
                                <DataGridTextColumn Header="Товары" Binding="{Binding Items}"/>
                                <DataGridTextColumn Header="Статус" Binding="{Binding Status}"/>
                        </DataGrid.Columns>
                </DataGrid>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" Grid.Row="1" HorizontalAlignment="Center">
                        <Button Content="Добавить заказ" Command="{Binding AddOrderCommand}" Width="120" Margin="5"/>
                        <Button Content="Назад статус" Command="{Binding PreviousStatusCommand}" Width="120" Margin="5"/>
                        <Button Content="Вперед статус" Command="{Binding NextStatusCommand}" Width="120" Margin="5"/>
                        <Button Content="Показать чек" Command="{Binding ShowReceiptCommand}" Width="120" Margin="5"/>

                        <ComboBox Width="120" Margin="10,0,0,0" SelectedItem="{Binding FilterStatus}">
                                <ComboBoxItem Content="All"/>
                                <ComboBoxItem Content="New"/>
                                <ComboBoxItem Content="Processing"/>
                                <ComboBoxItem Content="Delivering"/>
                                <ComboBoxItem Content="Completed"/>
                        </ComboBox>
                </StackPanel>
        </Grid>
</Window>
